    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const envelope = document.getElementById('envelope');
            const message = "JAJAJAKJA";
            const colors = ['#fff666', '#500', '#fff690', '#fff1099', '#fff500', '#fff700', '#fff400'];
            
            // Función para crear explosión de letras
            function createExplosion(e) {
                // Coordenadas del toque/clic
                let x, y;
                if (e.type.includes('touch')) {
                    x = e.touches[0].clientX;
                    y = e.touches[0].clientY;
                } else {
                    x = e.clientX;
                    y = e.clientY;
                }
                
                // Dividir el mensaje en letras
                const letters = message.split('');
                
                // Radio inicial para distribuir las letras
                const initialRadius = 30;
                
                // Calcular ángulo entre letras
                const angleStep = (2 * Math.PI) / letters.length;
                
                // Crear y animar cada letra
                letters.forEach((letter, index) => {
                    // Calcular posición inicial en círculo alrededor del punto de toque
                    const angle = index * angleStep;
                    const startX = Math.cos(angle) * initialRadius;
                    const startY = Math.sin(angle) * initialRadius;
                    
                    // Crear elemento de letra
                    const letterElement = document.createElement('div');
                    letterElement.classList.add('letter');
                    letterElement.textContent = letter;
                    letterElement.style.color = colors[index % colors.length];
                    
                    // Posicionar en el centro (punto de toque)
                    letterElement.style.left = (x + startX) + 'px';
                    letterElement.style.top = (y + startY) + 'px';
                    letterElement.style.opacity = '1';
                    letterElement.style.transform = 'translate(-50%, -50%) scale(1)';
                    
                    // Añadir al body
                    document.body.appendChild(letterElement);
                    
                    // Variables para la trayectoria de explosión
                    const explosionAngle = angle + (Math.random() * 1.0 - 0.5);
                    const distance = 150 + Math.random() * 200;
                    const endX = Math.cos(explosionAngle) * distance;
                    const endY = Math.sin(explosionAngle) * distance;
                    
                    // Rotación aleatoria
                    const rotation = (Math.random() * 360) - 180;
                    
                    // Duración de animación
                    const duration = 15000 + Math.random() * 500;
                    
                    // Animar con JavaScript puro
                    const startTime = Date.now();
                    
                    function animateLetter() {
                        const elapsed = Date.now() - startTime;
                        const progress = Math.min(elapsed / duration, 1);
                        
                        // Fórmula de easing
                        const ease = 1 - Math.pow(1 - progress, 3);
                        
                        // Calcular posición actual
                        const currentX = startX + (endX * ease);
                        const currentY = startY + (endY * ease);
                        const currentScale = 1 + (0.5 * ease);
                        const currentOpacity = 1 - progress;
                        
                        // Aplicar transformaciones
                        letterElement.style.left = (x + currentX) + 'px';
                        letterElement.style.top = (y + currentY) + 'px';
                        letterElement.style.transform = `translate(-50%, -50%) scale(${currentScale}) rotate(${rotation * progress}deg)`;
                        letterElement.style.opacity = currentOpacity;
                        
                        // Continuar animación si no ha terminado
                        if (progress < 1) {
                            requestAnimationFrame(animateLetter);
                        } else {
                            // Eliminar elemento después de la animación
                            if (letterElement.parentNode) {
                                letterElement.parentNode.removeChild(letterElement);
                            }
                        }
                    }
                    
                    // Iniciar animación
                    requestAnimationFrame(animateLetter);
                });
                
                // Efecto de vibración suave en el sobre
                envelope.style.transform = 'scale(0.97)';
                setTimeout(() => {
                    envelope.style.transform = 'scale(1)';
                }, 150);
            }
            
            // Event listeners para clic y toque
            envelope.addEventListener('click', createExplosion);
            envelope.addEventListener('touchstart', function(e) {
                createExplosion(e);
            });
            
            // También permitir interacción en toda la página
            document.body.addEventListener('click', function(e) {
                // Evitar duplicar evento si se hace clic en el sobre
                if (e.target === envelope || envelope.contains(e.target)) return;
                createExplosion(e);
            });
            
            document.body.addEventListener('touchstart', function(e) {
                // Evitar duplicar evento si se toca el sobre
                if (e.target === envelope || envelope.contains(e.target)) return;
                createExplosion(e);
            });
            
            // Crear una explosión inicial de bienvenida
            setTimeout(() => {
                const initialEvent = {
                    clientX: window.innerWidth / 2,
                    clientY: window.innerHeight / 2,
                    type: 'initial',
                    touches: [{clientX: window.innerWidth / 2, clientY: window.innerHeight / 2}]
                };
                createExplosion(initialEvent);
            }, 800);
        });
    </script>
</body>
